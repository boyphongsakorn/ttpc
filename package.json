{
  "name": "ttpc",
  "version": "1.1.2",
  "description": "TikTok On PC",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron ."
  },
  "build": {
    "productName": "ttpc",
    "appId": "com.boyphongsakorn.ttpc",
    "artifactName": "${productName}.${ext}",
    "copyright": "copyright Â© 2021 Quad B Software",
    "win": {
      "target": [
        "nsis"
      ],
      "compression": "maximum",
      "publisherName": "Quad B Software",
      "signingHashAlgorithms": [
        "sha1"
      ]
    },
    "nsis": {
      "artifactName": "${productName}-Setup.${ext}",
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Network",
      "compression": "maximum"
    }
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^12.0.4",
    "electron-builder": "^22.11.7"
  }
}
